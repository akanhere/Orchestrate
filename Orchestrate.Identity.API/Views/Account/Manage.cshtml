@model IEnumerable<Orchestrate.Identity.API.Models.AccountViewModels.ManageViewModel>
@{
    ViewData["Title"] = "Manage";
}

<h4>Manage</h4>
<br />
<div class="row">
    <div class="col-sm-3 mb-3">Username</div>
    <div class="col-sm-3 mb-3">Role</div>
</div>
@foreach (var item in Model.ToList())
{
    <div class="row">
        <div class="col-sm-3 mb-3">
            <label class="control-label form-label">@item.Email</label>
        </div>
        <div class="col-sm-3 mb-3">
            <select asp-for="@item.Role" asp-items="@item.AllRoles" class="control-label form-control"></select>
        </div>
    </div>

}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
